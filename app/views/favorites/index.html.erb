<table>
  <% if @favorites.empty? %>
    <h2>You don't have any favorite</h2>
  <% else %>
    <h2>Favorites</h2>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Image</th>
          <th>Posted by</th>

          <th colspan="3"></th>
        </tr>
      </thead>
  <% end %>
    <tbody>
      <% @favorites.each do |favorite| %>
        <% if favorite.user_id == current_user.id %>
      <td><%= favorite.post.title %></td>
      <td><%= favorite.post.content %></td>
      <% if favorite.post.image.url%>
      <td><%= image_tag favorite.post.image.url %></td>
      <td><%= favorite.post.user.name %></td>  
      <% end %>
    <% end %>      
  </tr>
<% end %>
</table>